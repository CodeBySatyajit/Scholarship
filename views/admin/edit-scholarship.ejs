<%- layout("layouts/boilerplate.ejs") %>

<div class="add-scholarship-container">
  <h2><i class="fa-solid fa-pencil"></i> Edit Scholarship</h2>

  <form action="/admin/edit-scholarship/<%= scholarship._id %>" method="POST">
    <div class="form-group">
      <label for="title"
        >Scholarship Title <span class="required">*</span></label
      >
      <input
        type="text"
        id="title"
        name="title"
        required
        placeholder="e.g., National Merit Scholarship"
        value="<%= scholarship.title %>"
      />
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="type">Type <span class="required">*</span></label>
        <select
          class="form-control form-control-lg"
          id="type" 
          name="type"
          required
        >
          <option value="" disabled>Select scholarship type</option>
          <option value="government" <%= scholarship.type === 'government' ? 'selected' : '' %>>Government</option>
          <option value="private" <%= scholarship.type === 'private' ? 'selected' : '' %>>Private</option>
          <option value="other" <%= scholarship.type === 'other' ? 'selected' : '' %>>Other</option>
        </select>
      </div>

      <div class="form-group">
        <label for="Amount">Amount <span class="required">*</span></label>
        <input
          type="number"
          id="Amount"
          name="Amount"
          required
          placeholder="e.g., â‚¹50,000"
          value="<%= scholarship.Amount %>"
        />
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="Region">Region <span class="required">*</span></label>
        <input
          type="text"
          id="Region"
          name="Region"
          required
          placeholder="e.g., National, State-specific"
          value="<%= scholarship.Region %>"
        />
      </div>

      <div class="form-group">
        <label for="Deadline">Deadline <span class="required">*</span></label>
        <input 
          type="date" 
          id="Deadline" 
          name="Deadline" 
          required 
          value="<%= scholarship.Deadline.toISOString().split('T')[0] %>"
        />
      </div>
    </div>

    <div class="form-group form-full">
      <label for="About">About <span class="required">*</span></label>
      <textarea
        id="About"
        name="About"
        required
        placeholder="Describe the scholarship..."
      ><%= scholarship.About %></textarea>
    </div>

    <div class="form-group form-full">
      <label for="Eligibility"
        >Eligibility <span class="required">*</span></label
      >
      <textarea
        id="Eligibility"
        name="Eligibility"
        required
        placeholder="List eligibility criteria..."
      ><%= scholarship.Eligibility %></textarea>
    </div>

    <div class="form-group form-full">
      <label for="Benefits">Benefits <span class="required">*</span></label>
      <textarea
        id="Benefits"
        name="Benefits"
        required
        placeholder="Describe the benefits..."
      ><%= scholarship.Benefits %></textarea>
    </div>

    <div class="form-group form-full">
      <label for="Documents"
        >Required Documents <span class="required">*</span></label
      >
      <textarea
        id="Documents"
        name="Documents"
        required
        placeholder="List required documents..."
      ><%= scholarship.Documents %></textarea>
    </div>
    
    <div class="form-group form-full">
      <label for="Education">Education Level</label>
      <select
        class="form-control form-control-lg"
        id="Education"
        name="Education"  
        value="<%= scholarship.Education %>"
      >
        <option value="all" <%= scholarship.Education === 'all' ? 'selected' : '' %>>All</option>
        <option value="class 1" <%= scholarship.Education === 'class 1' ? 'selected' : '' %>>Class 1</option>
        <option value="class 2" <%= scholarship.Education === 'class 2' ? 'selected' : '' %>>Class 2</option>
        <option value="class 3" <%= scholarship.Education === 'class 3' ? 'selected' : '' %>>Class 3</option>
        <option value="class 4" <%= scholarship.Education === 'class 4' ? 'selected' : '' %>>Class 4</option>
        <option value="class 5" <%= scholarship.Education === 'class 5' ? 'selected' : '' %>>Class 5</option>
        <option value="class 6" <%= scholarship.Education === 'class 6' ? 'selected' : '' %>>Class 6</option>
        <option value="class 7" <%= scholarship.Education === 'class 7' ? 'selected' : '' %>>Class 7</option>
        <option value="class 8" <%= scholarship.Education === 'class 8' ? 'selected' : '' %>>Class 8</option>
        <option value="class 9" <%= scholarship.Education === 'class 9' ? 'selected' : '' %>>Class 9</option>
        <option value="class 10" <%= scholarship.Education === 'class 10' ? 'selected' : '' %>>Class 10</option>
        <option value="class 11" <%= scholarship.Education === 'class 11' ? 'selected' : '' %>>Class 11</option>
        <option value="class 12" <%= scholarship.Education === 'class 12' ? 'selected' : '' %>>Class 12</option>
        <option value="diploma" <%= scholarship.Education === 'diploma' ? 'selected' : '' %>>Diploma</option>
        <option value="graduation" <%= scholarship.Education === 'graduation' ? 'selected' : '' %>>Graduation</option>
        <option value="post graduation" <%= scholarship.Education === 'post graduation' ? 'selected' : '' %>>Post Graduation</option>
      </select>
    </div>

    <div class="form-row">
    <div class="form-group">
      <label for="Gender">Gender</label>
      <select
        class="form-control form-control-lg"
        id="Gender"
        name="Gender"
        value="<%=scholarship.Gender %>"
      >
          <option value="female" <%= scholarship.Gender === 'female' ? 'selected' : '' %>>Female</option>
          <option value="both" <%= scholarship.Gender === 'both' ? 'selected' : '' %>>General (male + female)</option>
      </select>
    </div>

    <div class="form-group">
      <label for="Religion">Religion</label>
      <select
          class="form-control form-control-lg"
          id="Religion"
          name="Religion"
          value="<%=scholarship.Religion %>"
        >
      <option value="" disabled selected>Select religion</option>
          <option value="hindu" <%= scholarship.Religion === 'hindu' ? 'selected' : '' %>>Hindu</option>
          <option value="muslim" <%= scholarship.Religion === 'muslim' ? 'selected' : '' %>>Muslim</option>
          <option value="christian" <%= scholarship.Religion === 'christian' ? 'selected' : '' %>>Christian</option>
          <option value="sikh" <%= scholarship.Religion === 'sikh' ? 'selected' : '' %>>Sikh</option>
          <option value="other" <%= scholarship.Religion === 'other' ? 'selected' : '' %>>Other</option>
          <option value="all" <%= scholarship.Religion === 'all' ? 'selected' : '' %>>All Religions</option>
      </select>
    </div>

    <div class="form-group">
      <label for="CourseCategory">Course Category</label>
      <select
          class="form-control form-control-lg"
          id="CourseCategory"
          name="CourseCategory"
          value="<%=scholarship.CourseCategory %>"
        >
          <option value="engineering" <%= scholarship.CourseCategory === 'engineering' ? 'selected' : '' %>>Engineering</option>
          <option value="medical" <%= scholarship.CourseCategory === 'medical' ? 'selected' : '' %>>Medical</option>
          <option value="arts" <%= scholarship.CourseCategory === 'arts' ? 'selected' : '' %>>Arts</option>
          <option value="science" <%= scholarship.CourseCategory === 'science' ? 'selected' : '' %>>Science</option>
          <option value="commerce" <%= scholarship.CourseCategory === 'commerce' ? 'selected' : '' %>>Commerce</option>
          <option value="management" <%= scholarship.CourseCategory === 'management' ? 'selected' : '' %>>Management</option>
          <option value="other" <%= scholarship.CourseCategory === 'other' ? 'selected' : '' %>>Other</option>
      </select>
    </div>

    <div class="form-group">
      <label for="State">State</label>
      <select
          class="form-control form-control-lg"
          id="State"
          name="State"
          value="<%=scholarship.State %>"
        >
          <option value="andhra pradesh" <%= scholarship.State === 'andhra pradesh' ? 'selected' : '' %>>Andhra Pradesh</option>
          <option value="arunachal pradesh" <%= scholarship.State === 'arunachal pradesh' ? 'selected' : '' %>>Arunachal Pradesh</option>
          <option value="assam" <%= scholarship.State === 'assam' ? 'selected' : '' %>>Assam</option>
          <option value="bihar" <%= scholarship.State === 'bihar' ? 'selected' : '' %>>Bihar</option>
          <option value="chhattisgarh" <%= scholarship.State === 'chhattisgarh' ? 'selected' : '' %>>Chhattisgarh</option>
          <option value="goa" <%= scholarship.State === 'goa' ? 'selected' : '' %>>Goa</option>
          <option value="gujarat" <%= scholarship.State === 'gujarat' ? 'selected' : '' %>>Gujarat</option>
          <option value="haryana" <%= scholarship.State === 'haryana' ? 'selected' : '' %>>Haryana</option>
          <option value="himachal pradesh" <%= scholarship.State === 'himachal pradesh' ? 'selected' : '' %>>Himachal Pradesh</option>
          <option value="jharkhand" <%= scholarship.State === 'jharkhand' ? 'selected' : '' %>>Jharkhand</option>
          <option value="karnataka" <%= scholarship.State === 'karnataka' ? 'selected' : '' %>>Karnataka</option>
          <option value="kerala" <%= scholarship.State === 'kerala' ? 'selected' : '' %>>Kerala</option>
          <option value="madhya pradesh" <%= scholarship.State === 'madhya pradesh' ? 'selected' : '' %>>Madhya Pradesh</option>
          <option value="maharashtra" <%= scholarship.State === 'maharashtra' ? 'selected' : '' %>>Maharashtra</option>
          <option value="manipur" <%= scholarship.State === 'manipur' ? 'selected' : '' %>>Manipur</option>
          <option value="meghalaya" <%= scholarship.State === 'meghalaya' ? 'selected' : '' %>>Meghalaya</option>
          <option value="mizoram" <%= scholarship.State === 'mizoram' ? 'selected' : '' %>>Mizoram</option>
          <option value="nagaland" <%= scholarship.State === 'nagaland' ? 'selected' : '' %>>Nagaland</option>
          <option value="odisha" <%= scholarship.State === 'odisha' ? 'selected' : '' %>>Odisha</option>
          <option value="punjab" <%= scholarship.State === 'punjab' ? 'selected' : '' %>>Punjab</option>
          <option value="rajasthan" <%= scholarship.State === 'rajasthan' ? 'selected' : '' %>>Rajasthan</option>
          <option value="sikkim" <%= scholarship.State === 'sikkim' ? 'selected' : '' %>>Sikkim</option>
          <option value="tamil nadu" <%= scholarship.State === 'tamil nadu' ? 'selected' : '' %>>Tamil Nadu</option>
          <option value="telangana" <%= scholarship.State === 'telangana' ? 'selected' : '' %>>Telangana</option>
          <option value="tripura" <%= scholarship.State === 'tripura' ? 'selected' : '' %>>Tripura</option>
          <option value="uttar pradesh" <%= scholarship.State === 'uttar pradesh' ? 'selected' : '' %>>Uttar Pradesh</option>
          <option value="uttarakhand" <%= scholarship.State === 'uttarakhand' ? 'selected' : '' %>>Uttarakhand</option>
          <option value="west bengal" <%= scholarship.State === 'west bengal' ? 'selected' : '' %>>West Bengal</option>
          <option value="all" <%= scholarship.State === 'all' ? 'selected' : '' %>>All India</option>
      </select>
    </div>

    </div>


    <div class="form-group form-full">
      <label for="ApplyLink"
        >Application Link <span class="required">*</span></label
      >
      <input
        type="url"
        id="ApplyLink"
        name="ApplyLink"
        required
        placeholder="https://..."
        value="<%= scholarship.ApplyLink %>"
      />
    </div>

    <div class="btn-group">
      <button type="submit" class="btn btn-submit">
        <i class="fa-solid fa-check"></i> Update Scholarship
      </button>
      <a href="/admin/dashboard" class="btn btn-cancel">
        <i class="fa-solid fa-times"></i> Cancel
      </a>
    </div> 
  </form>
</div>
