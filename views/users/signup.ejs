<%- layout("layouts/boilerplate.ejs") %>

<!-- signup page content starts here -->

<div class="signup-container">
  <div class="signup-left">
    <div class="signup-left-text">
      <h2>Start Your Journey to Success</h2>
      <p>
        Create your account and unlock access to thousands of scholarship
        opportunities tailored for you.
      </p>
    </div>
  </div>

  <div class="signup-right">
    <div class="signup-card">
      <div class="signup-top">
        <div class="signup-logo">
          <i class="fa-solid fa-graduation-cap" style="color: white"></i>
        </div>
        <h3>Create Account</h3>
        <p>Join our scholarship community today</p>
      </div>

      <form class="signup-form" method="POST" action="/signup" id="signupForm">
        <div class="name-row">
          <div class="name-box">
            <label>First Name</label>
            <input type="text" name="FirstName" placeholder="John" required />
          </div>
          <div class="name-box">
            <label>Last Name</label>
            <input type="text" name="LastName" placeholder="Doe" required />
          </div>
        </div>

        <label>Email Address</label>
        <input
          type="email"
          class="full-input"
          name="Email"
          placeholder="john.doe@example.com"
          required
        />

        <label>Phone Number</label>
        <input
          type="number"
          class="full-input"
          name="Mobile"
          placeholder="9342XXXX-2573"
          required
        />

        <label>Password</label>
        <div class="pass-box">
          <input
            type="password"
            name="Password"
            placeholder="Create a password"
            required
          />
        </div>

        <button type="submit" class="signup-btn">Create Account</button>
      </form>

      <div class="signup-divider"><span></span> or <span></span></div>

      <a href="/auth/google" class="google-btn" role="button">
        <svg class="google-icon" viewBox="0 0 24 24">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Sign up with Google
      </a>

      <p class="signup-bottom">
          Already have an account? <a href="/login">Sign in</a>
        </p>
    </div>
  </div>
</div>
